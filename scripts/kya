#!/usr/bin/env bash
set -euo pipefail
INSTALL_DIR="/opt/kydras-sysagent"
# Load per-user env first (if readable), then system env
if [ -r "$HOME/.config/kydras/llm.env" ]; then
  set -a; . "$HOME/.config/kydras/llm.env"; set +a
elif [ -r /etc/kydras-llm.env ]; then
  set -a; . /etc/kydras-llm.env; set +a
fi
export PYTHONPATH="$INSTALL_DIR${PYTHONPATH:+:$PYTHONPATH}"
exec "$INSTALL_DIR/.venv/bin/python" -m kydras_sysagent.cli "$@"
